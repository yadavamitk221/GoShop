{
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/signup",
      "dest": "server.js"
    },
    {
      "src": "/api/auth/login",
      "dest": "server.js"
    },
    {
      "src": "/api/auth/check",
      "dest": "server.js"
    },
    {
      "src": "/",
      "dest": "build/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "build/$1"
    }
  ]
}